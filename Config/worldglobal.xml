<configs>
	<append xpath="/worldglobal">
		<biomes-config world="Test Biomes">

			<!-- reduce biome layers for existing snow biome config (biome 1) -->
			<!-- <biome-layer index="0"><property name="biome-weight-1" value="0.0"/></biome-layer> --><!-- texture id 19 -->
			<!-- <biome-layer index="1"><property name="biome-weight-1" value="0.0"/></biome-layer> --><!-- texture id 0 -->

			<!-- reduce biome layers for existing pine forest biome config (biome 2) -->
			<!-- <biome-layer index="2"><property name="biome-weight-2" value="0.0"/></biome-layer> --><!-- texture id 19 -->
			<!-- <biome-layer index="3"><property name="biome-weight-2" value="0.0"/></biome-layer> --><!-- texture id 2 -->

			<!-- reduce biome layers for existing burnt forest biome config (biome 3) -->
			<!-- <biome-layer index="4"><property name="biome-weight-3" value="0.0"/></biome-layer> --><!-- texture id 10 -->
			<!-- <biome-layer index="5"><property name="biome-weight-3" value="0.0"/></biome-layer> --><!-- texture id 19 -->

			<!-- reduce biome layers for existing wasteland biome config (biome 4) -->
			<!-- <biome-layer index="6"><property name="biome-weight-4" value="0.0"/></biome-layer> --><!-- texture id 10 -->
			<!-- <biome-layer index="7"><property name="biome-weight-4" value="0.0"/></biome-layer> --><!-- texture id 8 -->

			<!-- reduce biome layers for existing desert config (biome 5) -->
			<!-- <biome-layer index="8"><property name="biome-weight-5" value="0.0"/></biome-layer> --><!-- texture id 7 -->
			<biome-layer index="9"><property name="biome-weight-5" value="0.0"/></biome-layer><!-- texture id 20 -->
			<biome-layer index="10"><property name="biome-weight-5" value="0.0"/></biome-layer><!-- texture id 12 -->
			<biome-layer index="11"><property name="biome-weight-5" value="0.0"/></biome-layer><!-- texture id 11 -->

			<!-- overwrite main texture for existing snow biome (biome 0, uses texture id 0) -->
			<microsplat-patch index="0">
				<property name="Diffuse" value="#@modfolder:Resources/testBiomes02.unity3d?testBiomes02_diff_tarray[2]"/>
				<property name="Normal" value="#@modfolder:Resources/testBiomes02.unity3d?testBiomes02_norm_tarray[2]"/>
				<property name="Specular" value="#@modfolder:Resources/testBiomes02.unity3d?testBiomes02_shao_tarray[2]"/>
				<property name="SwitchNormal" value="false"/>
				<property name="SplatUVScale" value="4,4"/>
			</microsplat-patch>

			<!-- overwrite main texture for existing pine forest (biome 1, uses texture id 2) -->
			<microsplat-patch index="2">
				<property name="Diffuse" value="#@modfolder:Resources/testBiomes01.unity3d?testBiomes01_diff_tarray[1]"/>
				<property name="Normal" value="#@modfolder:Resources/testBiomes01.unity3d?testBiomes01_norm_tarray[1]"/>
				<property name="Specular" value="#@modfolder:Resources/testBiomes01.unity3d?testBiomes01_shao_tarray[1]"/>
				<property name="SwitchNormal" value="false"/>
				<property name="SplatUVScale" value="4,4"/>
			</microsplat-patch>

			<!-- overwrite main texture for existing burnt forest (biome 3, uses texture id 10) -->
			<microsplat-patch index="10">
				<property name="Diffuse" value="#@modfolder:Resources/testBiomes02.unity3d?testBiomes02_diff_tarray[1]"/>
				<property name="Normal" value="#@modfolder:Resources/testBiomes02.unity3d?testBiomes02_norm_tarray[1]"/>
				<property name="Specular" value="#@modfolder:Resources/testBiomes02.unity3d?testBiomes02_shao_tarray[1]"/>
				<property name="SwitchNormal" value="false"/>
				<property name="SplatUVScale" value="4,4"/>
			</microsplat-patch>

			<!-- overwrite main texture for existing wasteland biome (biome 4, uses texture id 8?) -->
			<microsplat-patch index="8">
				<property name="Diffuse" value="#@modfolder:Resources/testBiomes02.unity3d?testBiomes02_diff_tarray[0]"/>
				<property name="Normal" value="#@modfolder:Resources/testBiomes02.unity3d?testBiomes02_norm_tarray[0]"/>
				<property name="Specular" value="#@modfolder:Resources/testBiomes02.unity3d?testBiomes02_shao_tarray[0]"/>
				<property name="SwitchNormal" value="false"/>
				<property name="SplatUVScale" value="4,4"/>
			</microsplat-patch>

			<!-- overwrite main texture for existing desert biome (biome 5, uses texture id 7,20,12,11) -->
			<microsplat-patch index="7">
				<property name="Diffuse" value="#@modfolder:Resources/testBiomes01.unity3d?testBiomes01_diff_tarray[2]"/>
				<property name="Normal" value="#@modfolder:Resources/testBiomes01.unity3d?testBiomes01_norm_tarray[2]"/>
				<property name="Specular" value="#@modfolder:Resources/testBiomes01.unity3d?testBiomes01_shao_tarray[2]"/>
				<property name="SwitchNormal" value="false"/>
				<property name="SplatUVScale" value="4,4"/>
			</microsplat-patch>

			<!-- customize existing layer that we left active for biome 5 -->
			<biome-layer index="8">
				<!-- disable features to show texture opaque -->
				<property name="noise-active" value="false"/>
				<property name="height-active" value="false"/>
				<property name="slope-active" value="false"/>
				<property name="erosion-active" value="false"/>
				<property name="cavity-active" value="false"/>
			</biome-layer>

		</biomes-config>

		<!-- now adding custom textures -->

		<microsplat-texture name="gupTextureFlatGrass">
			<property name="Diffuse" value="#@modfolder:Resources/testBiomes01.unity3d?testBiomes01_diff_tarray[0]"/>
			<property name="Normal" value="#@modfolder:Resources/testBiomes01.unity3d?testBiomes01_norm_tarray[0]"/>
			<property name="Specular" value="#@modfolder:Resources/testBiomes01.unity3d?testBiomes01_shao_tarray[0]"/>
			<property name="SwitchNormal" value="false"/>
			<property name="SplatUVScale" value="4,4"/>
		</microsplat-texture>

		<microsplat-texture name="gupTextureColdLava">
			<property name="Diffuse" value="#@modfolder:Resources/testBiomes02.unity3d?testBiomes02_diff_tarray[0]"/>
			<property name="Normal" value="#@modfolder:Resources/testBiomes02.unity3d?testBiomes02_norm_tarray[0]"/>
			<property name="Specular" value="#@modfolder:Resources/testBiomes02.unity3d?testBiomes02_shao_tarray[0]"/>
			<property name="SwitchNormal" value="false"/>
			<property name="SplatUVScale" value="4,4"/>
		</microsplat-texture>

		<microsplat-texture name="gupTextureOrc">
			<property name="Diffuse" value="#@modfolder:Resources/testBiomes01.unity3d?testBiomes01_diff_tarray[3]"/>
			<property name="Normal" value="#@modfolder:Resources/testBiomes01.unity3d?testBiomes01_norm_tarray[3]"/>
			<property name="Specular" value="#@modfolder:Resources/testBiomes01.unity3d?testBiomes01_shao_tarray[3]"/>
			<property name="SwitchNormal" value="false"/>
			<property name="SplatUVScale" value="3,3"/>
		</microsplat-texture>

		<microsplat-voxel name="gupVoxelFlatGrass">
			<texture name="gupTextureFlatGrass" weight="1"/>
		</microsplat-voxel>
		<microsplat-voxel name="gupVoxelColdLava">
			<texture name="gupTextureColdLava" weight="1"/>
		</microsplat-voxel>
		<microsplat-voxel name="gupVoxelOrc">
			<texture name="gupTextureOrc" weight="1"/>
		</microsplat-voxel>

	</append>
</configs>